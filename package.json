{
  "name": "tokentoilet",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "bootstrap": "pnpm install --prefer-offline --loglevel warn",
    "build": "next build",
    "build-storybook": "storybook build",
    "dev": "next dev",
    "fix": "eslint --fix",
    "lint": "eslint",
    "prepare": "simple-git-hooks",
    "start": "next start",
    "storybook": "storybook dev -p 6006",
    "test": "vitest run",
    "test:bench": "vitest bench",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "validate": "pnpm run lint && pnpm run type-check && pnpm run test && pnpm run validate:design-system && pnpm run build-storybook",
    "validate:design-system": "tsx scripts/validate-design-system.ts",
    "validate:stories": "pnpm run build-storybook",
    "validate:web3": "tsx scripts/validate-web3-integration.ts"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*.{ts,js,jsx,tsx,css,md,json,toml,yaml,yml}": [
      "eslint --fix"
    ]
  },
  "prettier": "@bfra.me/prettier-config/120-proof",
  "dependencies": {
    "@reown/appkit": "^1.7.18",
    "@reown/appkit-adapter-wagmi": "^1.7.18",
    "@tanstack/react-query": "^5.66.0",
    "@tanstack/react-virtual": "^3.13.12",
    "consola": "^3.4.2",
    "crypto-js": "^4.2.0",
    "lucide-react": "^0.548.0",
    "next": "15.5.6",
    "next-themes": "^0.4.4",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hot-toast": "^2.6.0",
    "std-env": "^3.9.0",
    "wagmi": "^2.14.11",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@bfra.me/eslint-config": "^0.38.0",
    "@bfra.me/prettier-config": "^0.16.0",
    "@eslint-react/eslint-plugin": "^2.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@next/bundle-analyzer": "^15.5.4",
    "@next/eslint-plugin-next": "^15.4.6",
    "@storybook/addon-essentials": "9.0.0-alpha.12",
    "@storybook/addon-interactions": "9.0.0-alpha.10",
    "@storybook/addon-links": "^9.1.6",
    "@storybook/addon-themes": "^9.1.6",
    "@storybook/blocks": "9.0.0-alpha.17",
    "@storybook/nextjs": "^9.1.6",
    "@storybook/react": "^9.1.6",
    "@storybook/test": "9.0.0-alpha.2",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "24.10.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitest/coverage-v8": "^4.0.7",
    "@vitest/ui": "^4.0.7",
    "autoprefixer": "10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "9.39.1",
    "eslint-config-next": "15.5.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.5",
    "postcss": "8.5.6",
